<h1>Forgot you password?</h1>

<%= form_with url: password_reset_path do |form| %>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "user@linuxmastery.kr" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Password reset", class: "btn btn-primary" %>
  </div>

<% end %>
